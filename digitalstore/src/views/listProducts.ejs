<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIGITAL STORE</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/index.css">
    <link rel="shortcut icon" href="/img/icon.png">
</head>

<body>

    <!-- LAUTARO Y PABLO -->
    <%- include("partials/header")%>

    <!--MAIN-->

    <main class="main-listado">
        <section class="container-categories">
            <div class="desplegable">
                <h3 style="text-align: center;width: 100%;">Filtrar productos</h3>
                <i class="fa-solid fa-sort-down"></i>
            </div>
            <form action="/products" id="categorias-form" enctype="application/x-www-form-urlencoded" method="post">
                <div class="ofert-container">
                    <p>Oferta<i class="fa-solid fa-tag"></i></p>
                    <label class="switch">
                        <input type="checkbox" name="off">
                        <span class="slider round"></span>
                    </label>
                    
                </div>
                <div class="filters">
                    <h3>Categorias</h3>
                    <div class="filters-container">
                        <label><input type="checkbox" value="auriculares" name="auriculares"> Auriculares</label>
                        <label><input type="checkbox"  value="teclados" name="teclados"> Teclados</label>
                        <label><input type="checkbox" value="monitores" name="monitores"> Monitores</label>
                        <label><input type="checkbox" value="gabinetes" name="gabinetes"> Gabinetes</label>
                        <label><input type="checkbox" value="memorias" name="memorias"> Memorias</label>
                        <label><input type="checkbox" value="motherboard" name="motherboard"> Motherboard</label>
                    </div>
                    <input type="submit">
                </div>
            </form>
        </section>
        <section class="container-products">
            <% listProducts.forEach(product => { %>
                <%- include ("products/productCard.ejs",{product}) %> 
            <% }) %>
        </section>
    </main>

    <!-- AXEL -->
    <%- include("partials/footer")%>
    
    <!-- SCRIPTS -->
    <script src="/script/index.js"></script>
    <script src="https://kit.fontawesome.com/1c41280639.js" crossorigin="anonymous"></script>
</body>
    
</html>